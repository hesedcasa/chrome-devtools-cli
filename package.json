{
  "name": "chrome-devtools-cli",
  "version": "1.2.0",
  "description": "CLI tool to connect and interact with Chrome DevTools MCP server",
  "main": "dist/index.js",
  "bin": {
    "chrome-mcp-cli": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "release:patch": "bash scripts/release.sh patch",
    "release:minor": "bash scripts/release.sh minor",
    "release:major": "bash scripts/release.sh major",
    "prepublishOnly": "npm run build",
    "find-deadcode": "ts-prune",
    "format": "eslint --cache --fix --quiet . && prettier --write --cache .",
    "pre-commit": "npm run format && npm run find-deadcode"
  },
  "keywords": [
    "chrome-devtools-cli",
    "chrome",
    "devtools",
    "cli"
  ],
  "author": "Hesed",
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^25.0.2",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.9",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "prettier": "3.7.4",
    "ts-prune": "^0.10.3",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.46.4",
    "vitest": "^4.0.9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hesedcasa/chrome-devtools-cli.git"
  },
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/hesedcasa/chrome-devtools-cli/issues"
  },
  "homepage": "https://github.com/hesedcasa/chrome-devtools-cli#readme"
}
